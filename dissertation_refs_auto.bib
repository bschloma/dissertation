	author = {Swidsinski, Alexander and Sydora, Beate C and Doerffel, Yvonne and Loening-Baucke, Vera and Vaneechoutte, Mario and Lupicki, Maryla and Scholze, Juergen and Lochs, Herbert and Dieleman, Levinus A},
