pmid = {27861590},
title = {{Phylosymbiosis: Relationships and Functional Effects of Microbial Communities across Host Evolutionary History}},
url = {http://www.ncbi.nlm.nih.gov/pubmed/27861590 http://www.pubmedcentral.nih.gov/articlerender.fcgi?artid=PMC5115861 http://dx.plos.org/10.1371/journal.pbio.2000225},
