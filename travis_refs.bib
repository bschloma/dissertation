pmid = {17925449},
title = {{Expression of flagella is coincident with uropathogenic Escherichia coli ascension to the upper urinary tract}},
url = {http://www.ncbi.nlm.nih.gov/pubmed/17925449 http://www.pubmedcentral.nih.gov/articlerender.fcgi?artid=PMC2034267 http://www.pnas.org/cgi/doi/10.1073/pnas.0607898104},
