doi = {10.1128/mBio.01751-14},
issn = {2150-7511},
journal = {mBio},
month = {dec},
number = {6},
pages = {e01751--14},
pmid = {25516613},
publisher = {American Society for Microbiology},
title = {{Spatial and temporal features of the growth of a bacterial species colonizing the zebrafish gut.}},
url = {http://www.ncbi.nlm.nih.gov/pubmed/25516613 http://www.pubmedcentral.nih.gov/articlerender.fcgi?artid=PMC4271548},
volume = {5},
