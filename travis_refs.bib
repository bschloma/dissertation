pmid = {26507229},
title = {{Identification of Population Bottlenecks and Colonization Factors during Assembly of Bacterial Communities within the Zebrafish Intestine}},
url = {http://www.ncbi.nlm.nih.gov/pubmed/26507229 http://www.pubmedcentral.nih.gov/articlerender.fcgi?artid=PMC4626852 http://mbio.asm.org/lookup/doi/10.1128/mBio.01163-15},
