journal = {PLoS Pathogens},
month = {jul},
number = {7},
pages = {e1002815},
pmid = {22911651},
title = {{A New Zebrafish Model of Oro-Intestinal Pathogen Colonization Reveals a Key Role for Adhesion in Protection by Probiotic Bacteria}},
url = {http://www.ncbi.nlm.nih.gov/pubmed/22911651 http://www.pubmedcentral.nih.gov/articlerender.fcgi?artid=PMC3406073 https://dx.plos.org/10.1371/journal.ppat.1002815},
