pmid = {22479192},
title = {{Intronic Cis-Regulatory Modules Mediate Tissue-Specific and Microbial Control of angptl4/fiaf Transcription}},
url = {http://www.ncbi.nlm.nih.gov/pubmed/22479192 http://www.pubmedcentral.nih.gov/articlerender.fcgi?artid=PMC3315460 https://dx.plos.org/10.1371/journal.pgen.1002585},
