keywords = {Drosophila,Fitness landscape,Higher-order interactions,Life history tradeoffs,Microbiome},
month = {dec},
number = {51},
pages = {E11951--E11960},
pmid = {30510004},
publisher = {National Academy of Sciences},
title = {{Microbiome interactions shape host fitness}},
volume = {115},
year = {2018}
}
