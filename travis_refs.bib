doi = {10.1128/IAI.00276-17},
editor = {Deepe, George S.},
issn = {0019-9567},
journal = {Infection and Immunity},
keywords = {Candida albicans,mucosal immunity,neutrophils,zebrafish},
month = {sep},
number = {9},
pmid = {28607100},
title = {{Control of Mucosal Candidiasis in the Zebrafish Swim Bladder Depends on Neutrophils That Block Filament Invasion and Drive Extracellular-Trap Production}},
url = {http://www.ncbi.nlm.nih.gov/pubmed/28607100 http://www.pubmedcentral.nih.gov/articlerender.fcgi?artid=PMC5563567 http://iai.asm.org/lookup/doi/10.1128/IAI.00276-17},
