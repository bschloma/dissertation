keywords = {Bioinformatics,Medical Microbiology,Microbial Ecology,Microbial Genetics and Genomics,Microbiology,Virology},
month = {dec},
number = {1},
pages = {153},
publisher = {BioMed Central},
title = {{The gut mycobiome of the Human Microbiome Project healthy cohort}},
