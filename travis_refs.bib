title = {{Transcriptional characterization of Vibrio fischeri during colonization of juvenile Euprymna scolopes.}},
url = {http://doi.wiley.com/10.1111/1462-2920.13684 http://www.ncbi.nlm.nih.gov/pubmed/28152560 http://www.pubmedcentral.nih.gov/articlerender.fcgi?artid=PMC5409853},
