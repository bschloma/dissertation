pages = {1139--1151},
pmid = {15527494},
title = {{NO means 'yes' in the squid-vibrio symbiosis: nitric oxide (NO) during the initial stages of a beneficial association}},
url = {http://www.ncbi.nlm.nih.gov/pubmed/15527494 http://doi.wiley.com/10.1111/j.1462-5822.2004.00429.x},
